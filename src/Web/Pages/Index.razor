@page "/"
@inherits IndexComponentBase

@if (Notes == null)
{
    <div class="text-center">
        <h1 class="display-4">Note DotNet</h1>
    </div>
}
else
{
    var currentPage = (int)(Notes.Offset == 0 ? 0 : Math.Ceiling(Notes.Offset / (double)Limit)) + 1;
    var totalPages = (int)(Notes.Total == 0 ? 1 : Math.Ceiling(Notes.Total / (double)Limit));

    <div class="row pt-3">
        <nav aria-label="Pagination">
            <ul class="pagination">
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="#" @onclick="async () => await ChangePageAsync(currentPage - 1)">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                }

                <li class="page-item active">
                    <a class="page-link" href="#">@currentPage / @totalPages</a>
                </li>


                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="#" @onclick="async () => await ChangePageAsync(currentPage + 1)">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>

    <div class="row pt-3">
        <div class="card-columns">
            @foreach (var note in Notes.Items)
            {
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">
                            @note.Content
                        </p>
                    </div>

                    @if (note.Tags != null)
                    {
                        <div class="card-footer">
                            @foreach (var tag in note.Tags)
                            {
                                <span class="badge badge-pill badge-primary">@tag</span>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}

