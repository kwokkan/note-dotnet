@typeparam TModel

@switch (State)
{
    case Models.LoadingState.NotLoaded:
        @NotLoaded
        break;
    case Models.LoadingState.Loading:
        @Loading
        break;
    case Models.LoadingState.Loaded:
        @Loaded(Model)
        break;
    case Models.LoadingState.Errored:
        @Errored(Exception)
        break;
    default:
        break;
}